<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle or siteData.name }}</title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,700&display=swap" rel="stylesheet">
    <style>
      .webring {
        width: 100%;
        margin: 0 auto;
      }
      iframe {
        width: 100%;
        height: 60vh;
        margin-bottom: var(--spacing-m);
        border: 10px solid var(--secondary);
      }
    </style>
  </head>
  <body>
    {{ content | safe }}
    
    <div class="webring">
      {%- for friend in friends -%}
        <iframe data-src="https://{{ friend.domain }}.glitch.me" hidden></iframe>
      {%- endfor -%}
      <br>

      <div class="horizontal">
        <button class="button" onclick="previous()">previous</button>
        <button class="button" onclick="next()">next</button>  
      </div>
    </div>
    
    <footer>
      Made by <a href="https://twitter.com/notwaldorf">Monica</a> and <a href="https://twitter.com/jllord">Jessica</a>.
      Go back to the <a href="/">homepage</a>.
    </footer>
  </body>
  <script>
    let index = 0;
    let iframes = document.querySelectorAll('iframe');
    show(0);
    
    function previous() {
      if (index === 0) return;
      iframes[index].hidden = true;
      index -= 1;
      show(index);
    }
    function next() {
      if (index === iframes.length - 1) return;
      iframes[index].hidden = true;
      index += 1;
      show(index);
    }
    function show(index) {
      iframes[index].hidden = false;
      iframes[index].src = iframes[index].dataset.src;
    }
  </script>
</html>